<span>
  <%= object.likes.count %>
    <%= link_to comment_likes_path(object), class: "text-light", method: :post do %>
      <% if liked?(subject = object, type = 'comment') %>
        <button class="btn btn-liked size-12">
          <i class="fas fa-thumbs-up" />
        </button>
      <% else%>
        <button class="btn btn-neutral size-12">
          <i class="fas fa-thumbs-up" />
        </button>
      <% end %>
    <% end %>
  <% end %>
  Likes
</span>
